<%- include('../includes/head.ejs', {title: 'Product Details'}) %>
<link rel="stylesheet" href="/styles/products.css">
</head>

<body>
    <%- include('../includes/header.ejs') %>
    <main>
        <section class="input-form">
            <h1><%= product.name %></h1>
            <img src="/<%= product.imagePath %>" alt="A picture of a(n) <%= product.name%>" class="details-image">
            <div class="details-body">
                <p>$<%= product.price %></p>
                <p><%= product.description %></p>
                <% if (!locals.isAdmin) { %>
                    <form action="/cart/<%= product._id %>" method="POST">
                        <input type="hidden" value="<%= locals.csrfToken %>" name="_csrf">
                        <button class="btn">Add to Cart</button>
                    </form>
                <% } %>
            </div>
        </section>
    </main>
</body>

</html>